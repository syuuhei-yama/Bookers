<div class="container">
  <div class="row">
   <div class="col-lg-3" > 
  <div>
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  </div>

  <h3 class="profile-name"><%= @user.name %></h3>

  <table>
    <thead>
      <tr>
        <%= @user.name %>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </thead>
  </table>
      <div>
        <%= link_to "プロフィール編集", edit_user_path(current_user.id) %>
      </div>

  
  <h2>New book</h2>
    <%= form_for (@book) do |f| %>

      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Opinion</h4>
      <%= f.text_area :body %>

      <%= f.submit'Create Book' %>

    <% end %>
</div>

<div class="col-lg-9"> 
  <h2>Books</h2>
    <table class="table">
    <thead>
     <tr>
      <th>Title</th>
      <th>Opinion</th>
     </tr> 
    </thead>
      <% @books.each do |book| %>
      <tr>
       <td><%= attachment_image_tag @users, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
        </tr>
      <% end %>
    </table>
  </div>


