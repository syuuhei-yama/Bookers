 <div class="container">
  <div class="row">
     <div class="col-lg-3" >
      <div>
          <h2>User info</h2>
          <%= attachment_image_tag @users, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      </div>

      <h3 class="profile-name"><%= @users.name %></h3>

      <table>
        <thead>
          <tr>
            <%=@users.name %>
            <th>introduction</th>
            <th><%= @users.introduction %></th>
          </tr>
        </thead>
      </table>
          <div>
            <%= link_to "プロフィール編集", edit_user_path %>
          </div>

          <h2>New book</h2>
        <%= form_for (@book) do |f| %>

          <h4>Title</h4>
          <%= f.text_field :title %>

          <h4>Opinion</h4>
          <%= f.text_area :body %>

          <%= f.submit'Create Book' %>

        <% end %>
        </div>

  <div class="col-lg-9"> 
    <h2>Books</h2>
      <table class="table">
       <thead>
         <tr>
          <td>Title</td>
          <td>Opinion</td>
         </tr> 
       </thead>
       <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to users_path(book.user) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td>  
           <%= link_to book.title, book_path(book) %>
           </td>
           <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
     </table>
  </div>
</div>
</div>




